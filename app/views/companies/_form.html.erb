<%= javascript_include_tag 'companies' %>
<%= yield :head %>
  <%= render :partial => "companies/topform" %>
<%= form_for @company, :html => { :class => "form-horizontal form-bordered", 'data-toggle' => "validator" } do |f| %>
<div class="container is-widescreen">
  <div class="notification">
<label class="label">DADOS GERAIS</label>    

</br>


  <label class="label"><%= f.label :name %></label>
  <div class ='form-control'>
   <%= f.text_field :name, :class => 'input' ,'required' => 'true','data-minlength'=>'3', 
   'data-error' => "Ops. Nome invÃ¡lido ou muito pequeno. " %>
  </div>
  </br>  
  
                          
  <label class="label"><%= f.label :kind %></label>
  <div class="form-group">
   <%= f.select(:kind, Company.kinds.keys.map {|kind| [kind.titleize,kind]},{include_blank: false}, :class => 'form-control' )%>
  </div>
  </br>
  
  <label class="label"><%= f.label :predefaulting %></label>
  <div class="form-group">
   <%= f.select(:predefaulting, Company.predefaultings.keys.map {|predefaulting| [predefaulting.titleize,predefaulting]},{include_blank: false}, :class => 'form-control' )%>
  </div>
  </br>  
  
  <label class="label"><%= f.label :posdefaulting %></label>
  <div class="form-group">
   <%= f.select(:posdefaulting, Company.posdefaultings.keys.map {|posdefaulting| [posdefaulting.titleize,posdefaulting]},{include_blank: false}, :class => 'form-control' )%>
  </div>
  </br>    
  
  
  <label class="label"><%= f.label :status %></label>
  <div class="form-group">
   <%= f.select(:status, Company.statuses.keys.map {|status| [status.titleize,status]},{include_blank: false}, :class => 'form-control' )%>
  </div>
  </br> 
  
  <label class="label"><%= f.label :prenotice%></label>
  <div class ='form-control'>
    <%= f.text_area :prenotice, :class => 'input' %>  
  </div>
  </br>   
  
  <label class="label"><%= f.label :posnotice%></label>
  <div class ='form-control'>
   <%= f.text_area :postnotice, :class => 'input' %> 
  </div>
  </br>   
  
  
  <label class="label"><%=f.label :email%></label>
  <div class="form-control">
    <div class="select">
     <%= f.collection_select(:user_id, @users.order(:email), :id, :email, {include_blank: false}, { :class => 'form-control' })%>
    </div>
    </br>
  </div>   
  
  
<div class="field is-grouped">
  <p class="control">
    <%= f.submit nil, :class => 'button is-primary' %>    
  </p>
  <p class="control">
    <a href="/companies" class="button is-info">
      Cancel
    </a>
  </p>
</div>
  
  
  
  
  
  
  </div>
</div>
<% end %>
