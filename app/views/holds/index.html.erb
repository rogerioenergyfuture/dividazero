<p id="notice"><%= notice %></p>

<h1>Holds</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Mobile</th>
      <th>Email</th>
      <th>Status</th>
      <th>Predefaulting</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holds.each do |hold| %>
      <tr>
        <td><%= hold.code %></td>
        <td><%= hold.name %></td>
        <td><%= hold.mobile %></td>
        <td><%= hold.email %></td>
        <td><%= hold.status %></td>
        <td><%= hold.predefaulting %></td>
        <td><%= hold.company.name %></td>
        <td><%= link_to 'Show', hold %></td>
        <td><%= link_to 'Edit', edit_hold_path(hold) %></td>
        <td><%= link_to 'Destroy', hold, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

