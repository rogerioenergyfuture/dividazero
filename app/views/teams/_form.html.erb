
<%= yield :head %>
  
<%= form_for @team, :html => { :class => "form-horizontal form-bordered", 'data-toggle' => "validator" } do |f| %>
<div class="container is-widescreen">
  <div class="notification">
<label class="label">DADOS GERAIS</label>    

</br>
  
  <label class="label"><%= f.label :name %></label>
  <div class ='form-control'>
   <%= f.text_field :name, :class => 'input' ,'required' => 'true','data-minlength'=>'3', 
   'data-error' => "Ops. Nome invÃ¡lido ou muito pequeno. " %>
  </div>
  </br>  
  <label class="label"><%=f.label :level%></label>
  <div class="form-control">
     <%= f.select(:level, Team.levels.keys.map {|level| [level.titleize,level]},{include_blank: false}, :class => 'form-control' )%>
    </br>
  </div> 
 </br> 
  
  </br>  
  <label class="label"><%=f.label :status%></label>
  <div class="form-control">
     <%= f.select(:status, Team.statuses.keys.map {|status| [status.titleize,status]},{include_blank: false}, :class => 'form-control' )%>
    </br>
  </div> 
 </br>  
 
  </br>  
  <label class="label"><%=f.label :year%></label>
  <div class="form-control">
     <%= f.select(:year, Team.years.keys.map {|year| [year.titleize,year]},{include_blank: false}, :class => 'form-control' )%>
    </br>
  </div> 
 </br>  
 
  
  <label class="label"><%= f.label :teacher_id  %></label>
  <div class ='form-control'>
   <%= f.collection_select(:teacher_id, @teachers, :id, :name, {include_blank: true}, { :class => 'form-control' })%>
  </div>
</br>  
  <label class="label"><%= f.label :value  %></label>
  <div class ='form-control'>
    <%= f.text_field :value.to_s, :class => 'input', :id=> 'value.to_s' %> 
  </div>  
  
  

  
</br>   
<div class="field is-grouped">
  <p class="control">
    <%= f.submit nil, :class => 'button is-primary' %>    
  </p>
  <p class="control">
    <a href="/teams" class="button is-info">
      Cancel
    </a>
  </p>
</div>
  
  
  
  
  
  
  </div>
</div>
<% end %>


